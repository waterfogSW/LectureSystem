{
  "openapi": "3.0.0",
  "info": {
    "title": "강의 시스템 API",
    "description": "강의 시스템 API 문서입니다.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/lectures": {
      "get": {
        "summary": "강의 목록 조회",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1,
              "required": false
            },
            "description": "페이지 번호"
          },
          {
            "in": "query",
            "name": "pageSize",
            "schema": {
              "type": "integer",
              "default": 10,
              "required": false
            },
            "description": "페이지 크기"
          },
          {
            "in": "query",
            "name": "order",
            "schema": {
              "type": "string",
              "enum": [
                "recent",
                "enrollments"
              ],
              "default": "recent",
              "required": false
            },
            "description": "정렬 순서(최신순, 수강생순)"
          },
          {
            "in": "query",
            "name": "category",
            "schema": {
              "type": "string",
              "enum": [
                "web",
                "app",
                "game",
                "algorithm",
                "infra",
                "database"
              ]
            },
            "description": "검색 필터 - 카테고리",
            "required": false
          },
          {
            "in": "query",
            "name": "searchType",
            "schema": {
              "type": "string",
              "enum": [
                "title",
                "instructor",
                "student_id"
              ]
            },
            "description": "검색타입",
            "required": false
          },
          {
            "in": "query",
            "name": "searchKeyword",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "검색어"
          }
        ],
        "responses": {
          "200": {
            "description": "강의 목록",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LectureListResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "강의 등록",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LectureCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "강의 생성됨",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LectureCreateResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/lectures/bulk": {
      "post": {
        "summary": "강의 대량 등록",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/LectureBulkCreateRequest"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "강의 대량 등록 결과 응답",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LectureBulkCreateResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/lectures/{id}": {
      "get": {
        "summary": "강의 상세 조회",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "강의 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "강의 상세 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LectureDetailResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "강의를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "강의 수정",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "강의 ID"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LectureEditRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "강의 수정됨"
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "강의를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "강의 삭제",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "강의 ID"
          }
        ],
        "responses": {
          "204": {
            "description": "강의 삭제됨"
          },
          "400": {
            "description": "잘못된 요청"
          },
          "404": {
            "description": "강의를 찾을 수 없음"
          },
          "500": {
            "description": "서버 에러"
          }
        }
      }
    },
    "/api/lectures/{id}/open": {
      "post": {
        "summary": "강의 개설",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "강의 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "강의 개설됨"
          },
          "400": {
            "description": "잘못된 요청"
          },
          "404": {
            "description": "강의를 찾을 수 없음"
          },
          "500": {
            "description": "서버 에러"
          }
        }
      }
    },
    "/api/students": {
      "post": {
        "summary": "수강생 (회원) 가입",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StudentCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "수강생 생성됨",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StudentCreateResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/students/{id}": {
      "delete": {
        "summary": "수강생 (회원) 탈퇴",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "수강생 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "수강생 탈퇴됨"
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "수강생을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/enrollments": {
      "post": {
        "summary": "강의 수강 신청",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "lectureIds": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "description": "수강 신청할 강의 ID 목록"
                  },
                  "studentId": {
                    "type": "integer",
                    "description": "수강생 ID"
                  }
                },
                "required": [
                  "lectureIds",
                  "studentId"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "수강 신청됨"
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "강의 혹은 수강생을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LectureListResponse": {
        "description": "강의 목록 조회 응답",
        "type": "object",
        "properties": {
          "lectures": {
            "type": "array",
            "items": {
              "description": "강의 목록 조회 아이템",
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "강의 ID"
                },
                "category": {
                  "type": "string",
                  "enum": [
                    "web",
                    "app",
                    "game",
                    "algorithm",
                    "infra",
                    "database"
                  ],
                  "description": "강의 카테고리"
                },
                "title": {
                  "type": "string",
                  "description": "강의명"
                },
                "instructor": {
                  "type": "string",
                  "description": "강사명"
                },
                "price": {
                  "type": "integer",
                  "description": "가격"
                },
                "studentCount": {
                  "type": "integer",
                  "description": "수강생 수"
                },
                "createdAt": {
                  "type": "string",
                  "format": "date-time",
                  "description": "강의 생성 날짜"
                }
              },
              "required": [
                "id",
                "category",
                "title",
                "instructor",
                "price",
                "studentCount",
                "createdAt"
              ]
            }
          },
          "total": {
            "type": "integer"
          },
          "page": {
            "type": "integer"
          },
          "pageSize": {
            "type": "integer"
          }
        },
        "required": [
          "lectures",
          "total",
          "page",
          "pageSize"
        ]
      },
      "LectureCreateRequest": {
        "description": "강의 등록 요청",
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "강의명"
          },
          "introduction": {
            "type": "string",
            "description": "강의 소개"
          },
          "instructorId": {
            "type": "integer",
            "description": "강사 ID"
          },
          "category": {
            "type": "string",
            "enum": [
              "web",
              "app",
              "game",
              "algorithm",
              "infra",
              "database"
            ],
            "description": "강의 카테고리"
          },
          "price": {
            "type": "integer",
            "description": "가격"
          }
        },
        "required": [
          "title",
          "introduction",
          "instructorId",
          "category",
          "price"
        ]
      },
      "LectureCreateResponse": {
        "description": "강의 등록 응답",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "강의 ID"
          },
          "title": {
            "type": "string",
            "description": "강의명"
          }
        }
      },
      "LectureBulkCreateRequest": {
        "description": "강의 대량 등록 요청",
        "type": "object",
        "properties": {
          "lectures": {
            "type": "array",
            "items": {
              "description": "강의 대량 등록 요청 아이템",
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "강의명"
                },
                "introduction": {
                  "type": "string",
                  "description": "강의 소개"
                },
                "instructorId": {
                  "type": "integer",
                  "description": "강사 ID"
                },
                "category": {
                  "type": "string",
                  "enum": [
                    "web",
                    "app",
                    "game",
                    "algorithm",
                    "infra",
                    "database"
                  ],
                  "description": "강의 카테고리"
                },
                "price": {
                  "type": "integer",
                  "description": "가격"
                }
              },
              "required": [
                "title",
                "introduction",
                "instructorId",
                "category",
                "price"
              ]
            }
          }
        }
      },
      "LectureBulkCreateResponse": {
        "description": "강의 대량 등록 응답",
        "type": "object",
        "properties": {
          "successes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "강의 ID"
                },
                "title": {
                  "type": "string",
                  "description": "강의명"
                }
              }
            }
          },
          "failures": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "강의명"
                },
                "message": {
                  "type": "string",
                  "description": "실패 사유"
                }
              }
            }
          }
        }
      },
      "LectureDetailResponse": {
        "description": "강의 상세 조회 응답",
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "강의명"
          },
          "introduction": {
            "type": "string",
            "description": "강의 소개"
          },
          "category": {
            "type": "string",
            "enum": [
              "web",
              "app",
              "game",
              "algorithm",
              "infra",
              "database"
            ],
            "description": "강의 카테고리"
          },
          "price": {
            "type": "integer",
            "description": "가격"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "강의 생성 날짜"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "최근 수정 시간"
          },
          "students": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "nickname": {
                  "type": "string",
                  "description": "수강생 닉네임"
                },
                "enrolledAt": {
                  "type": "string",
                  "format": "date-time",
                  "description": "수강 신청 일자"
                }
              },
              "required": [
                "nickname",
                "enrolledAt"
              ]
            },
            "description": "수강생 목록"
          }
        },
        "required": [
          "title",
          "introduction",
          "category",
          "price",
          "createdAt",
          "updatedAt",
          "students"
        ]
      },
      "LectureEditRequest": {
        "description": "강의 수정 요청",
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "강의명"
          },
          "introduction": {
            "type": "string",
            "description": "강의 소개"
          },
          "price": {
            "type": "integer",
            "description": "가격"
          }
        },
        "required": [
          "title",
          "introduction",
          "price"
        ]
      },
      "StudentCreateRequest": {
        "description": "수강생 (회원) 가입 요청",
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "수강생의 이메일"
          },
          "nickname": {
            "type": "string",
            "description": "수강생의 닉네임"
          }
        },
        "required": [
          "email",
          "nickname"
        ]
      },
      "StudentCreateResponse": {
        "description": "수강생 (회원) 가입 응답",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "수강생 ID"
          },
          "nickname": {
            "type": "string",
            "description": "수강생 닉네임"
          }
        }
      },
      "ErrorResponse": {
        "description": "에러 응답",
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "에러 메시지"
          }
        }
      }
    }
  }
}
